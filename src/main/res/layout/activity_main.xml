<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/tela"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/button7"
        android:layout_width="229dp"
        android:layout_height="82dp"
        android:layout_marginTop="97dp"
        android:layout_marginBottom="49dp"
        android:onClick="reiniciar"
        android:text="Reiniciar"
        android:textSize="20sp"
        app:backgroundTint="#009688"
        app:layout_constraintBottom_toTopOf="@+id/tableLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="154dp"
        android:layout_height="62dp"
        android:layout_marginStart="100dp"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="1100dp"
        android:layout_marginEnd="70dp"
        android:layout_marginRight="70dp"
        android:layout_marginBottom="643dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.499" />

    <TableLayout
        android:id="@+id/tableLayout"
        android:layout_width="278dp"
        android:layout_height="276dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/button1"
                android:layout_width="140dp"
                android:layout_height="90dp"
                android:insetRight="10dp"
                android:linksClickable="false"
                android:onClick="analisarJogada"
                android:text="1"
                android:textSize="20sp"
                app:backgroundTint="@color/colorB1" />

            <Button
                android:id="@+id/button2"
                android:layout_width="140dp"
                android:layout_height="90dp"
                android:insetLeft="10dp"
                android:onClick="analisarJogada"
                android:text="2"
                android:textSize="20sp"
                app:backgroundTint="#E91E63"
                app:iconTint="@color/colorB2" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/button3"
                android:layout_width="140dp"
                android:layout_height="90dp"
                android:insetRight="10dp"
                android:onClick="analisarJogada"
                android:text="3"
                android:textSize="20sp"
                app:backgroundTint="@color/colorB3"
                app:iconTint="#673AB7" />

            <Button
                android:id="@+id/button4"
                android:layout_width="140dp"
                android:layout_height="90dp"
                android:insetLeft="10dp"
                android:onClick="analisarJogada"
                android:text="4"
                android:textSize="20sp"
                app:backgroundTint="@color/colorB4" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/button5"
                android:layout_width="140dp"
                android:layout_height="90dp"
                android:insetRight="10dp"
                android:onClick="analisarJogada"
                android:text="5"
                android:textSize="20sp"
                app:backgroundTint="@color/colorB5" />

            <Button
                android:id="@+id/button6"
                android:layout_width="140dp"
                android:layout_height="90dp"
                android:insetLeft="10dp"
                android:onClick="analisarJogada"
                android:text="6"
                android:textSize="20sp"
                app:backgroundTint="@color/colorB6" />
        </TableRow>

    </TableLayout>

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="60dp"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="1000dp"
        android:layout_marginEnd="343dp"
        android:layout_marginRight="343dp"
        android:layout_marginBottom="643dp"
        android:text="Progresso:"
        android:textAllCaps="false"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.448" />


    <Chronometer
        android:id="@+id/timer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="120dp"
        android:layout_marginLeft="120dp"
        android:layout_marginTop="220dp"
        android:layout_marginEnd="60dp"
        android:layout_marginRight="60dp"
        android:layout_marginBottom="712dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

</androidx.constraintlayout.widget.ConstraintLayout>